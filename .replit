modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "vscode_extension_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Extension Compiler"

[[workflows.workflow]]
name = "vscode_extension_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm init -y && npm install --save vscode @types/vscode ws uuid @types/ws @types/uuid && npm install --save-dev typescript @types/node && npx tsc"

[[workflows.workflow]]
name = "Extension Compiler"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && tsc --build"

[deployment]
run = ["sh", "-c", "npm install && npm install -g typescript && npm install @types/vscode @types/node uuid ws && tsc && echo \"TypeScript compilation completed. Extension built successfully.\""]
